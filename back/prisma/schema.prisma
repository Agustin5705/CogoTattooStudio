// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id          Int      @id @default(autoincrement())
  fullName    String
  wpp         String
  link        String?
  presupuesto Float?
  fecha       DateTime?  // <-- Agrega este campo
  createdAt   DateTime @default(now())
}

model GalleryImage {
  id          String   @id @default(uuid()) @db.Uuid
  publicId    String   @unique // ID único que Cloudinary usa para borrar
  secureUrl   String   @unique // La URL de la imagen (lo que mostrarás)
  tags        String[]
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(false)
  position    Int?
}

model HighlightImage {
  id          String   @id @default(uuid()) @db.Uuid
  publicId    String   @unique // ID único que Cloudinary usa para borrar
  secureUrl   String   @unique // La URL de la imagen (lo que mostrarás)
  tags        String[]
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(false)
  position    Int?
}

model AdminUser {
  id          Int      @id @default(autoincrement())
  username    String   @unique @default("admin") 
  hashedPassword String 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}